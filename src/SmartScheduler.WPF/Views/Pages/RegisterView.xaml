<Page x:Class="SmartScheduler.WPF.Views.Pages.RegisterView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="RegisterView"
      Background="{DynamicResource BackgroundBrush}">
    <Border Width="830" Height="580">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="233*" />
                <ColumnDefinition Width="217*" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0"
                        Margin="47,0,0,0"
                        Panel.ZIndex="1"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center" Height="560" Width="368" Grid.ColumnSpan="2">

                <StackPanel Orientation="Horizontal" Margin="0,0,0,40">
                    <Image Source="/Assets/pngs/logo.png"
                           Width="48"
                           Height="48"
                           Stretch="Uniform"
                           Margin="0,0,10,0" />
                    <TextBlock Text="SmartScheduler"
                               FontSize="24"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               Foreground="#333" />
                </StackPanel>

                <TextBlock Text="Register"
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="#333" />

                <StackPanel Margin="0,20,0,0">
                    <TextBlock Text="Username"
                               FontSize="14"
                               Foreground="#555"
                               Margin="0,0,0,5" />
                    <ui:TextBox PlaceholderText="Username"
                                Width="360"
                                Margin="0,0,0,15"
                                Style="{DynamicResource FluentTextBox}" />

                    <TextBlock Text="Email"
                               FontSize="14"
                               Foreground="#555"
                               Margin="0,0,0,5" />
                    <ui:TextBox PlaceholderText="Email"
                                Width="360"
                                Margin="0,0,0,15"
                                Style="{DynamicResource FluentTextBox}" />

                    <TextBlock Text="Password"
                               FontSize="14"
                               Foreground="#555"
                               Margin="0,0,0,5" />
                    <ui:PasswordBox PlaceholderText="Password"
                                    Margin="0,0,0,15"
                                    Width="360"
                                    Style="{DynamicResource FluentTextBox}" />

                    <TextBlock Text="Confirm Password"
                               FontSize="14"
                               Foreground="#555"
                               Margin="0,0,0,5" />
                    <ui:PasswordBox PlaceholderText="Confirm Password"
                                    Margin="0,0,0,15"
                                    Width="360"
                                    Style="{DynamicResource FluentTextBox}" />

                    <ui:Button Content="Register"
                               Appearance="Primary"
                               Width="357"
                               Height="30"
                               Margin="0,10,0,15"
                               Focusable="True"
                               Style="{DynamicResource PrimaryButton}" />
                </StackPanel>

                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                             Margin="0,0,0,5">
                    <TextBlock Text="Already have an account?"
                               Foreground="#555"
                               FontSize="12" />
                    <TextBlock Text=" " FontSize="12" />
                    <TextBlock Text="Log in"
                               Foreground="#5B78F6"
                               FontSize="12"
                               TextDecorations="Underline"
                               Cursor="Hand"
                               MouseLeftButtonDown="TextBlock_MouseLeftButtonDown" />
                </StackPanel>
            </StackPanel>

            <Grid Grid.Column="1"
                VerticalAlignment="Top"
                HorizontalAlignment="Right"
                Margin="0,-29,-44,0"
                Panel.ZIndex="1" Height="600" Width="512">
                <Image Source="/Assets/pngs/login.png"
               Stretch="Fill"
               Width="586"
               Height="436"
               HorizontalAlignment="Left"
               VerticalAlignment="Top" Margin="-10,164,0,0" />
            </Grid>
        </Grid>
    </Border>
</Page>